<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cl.dao.FuwujiluDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.cl.entity.FuwujiluEntity" id="fuwujiluMap">
        <result property="zhiyuanzhezhanghao" column="zhiyuanzhezhanghao"/>
        <result property="zhiyuanzhexingming" column="zhiyuanzhexingming"/>
        <result property="fuwuxiangmu" column="fuwuxiangmu"/>
        <result property="kaishishijian" column="kaishishijian"/>
        <result property="jieshushijian" column="jieshushijian"/>
        <result property="fuwushizhang" column="fuwushizhang"/>
        <result property="fuwudidian" column="fuwudidian"/>
        <result property="fuwurenshu" column="fuwurenshu"/>
        <result property="fuwupingjia" column="fuwupingjia"/>
        <result property="yonghuzhanghao" column="yonghuzhanghao"/>
        <result property="yonghuxingming" column="yonghuxingming"/>
        <result property="beizhu" column="beizhu"/>
    </resultMap>

    <select id="selectListView"
		resultType="com.cl.entity.view.FuwujiluView" >

		SELECT  fuwujilu.* FROM fuwujilu  fuwujilu 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.cl.entity.view.FuwujiluView" >
		SELECT * FROM fuwujilu  fuwujilu <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM fuwujilu
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
        limit 10
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM fuwujilu
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM fuwujilu
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM fuwujilu
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM fuwujilu
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
        limit 10
    </select>



</mapper>
